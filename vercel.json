{
  "version": 2,
  "buildCommand": "npm install",
  "functions": {
    "api/index.js": {
      "includeFiles": "../views/**",
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
