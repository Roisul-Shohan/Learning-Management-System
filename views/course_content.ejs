// Quiz functionality
let currentQuizId = null;
let currentQuizData = null;

function takeQuiz(quizId, title) {
    currentQuizId = quizId;
    document.getElementById('quizTitle').textContent = title;
    document.getElementById('quizModal').classList.remove('hidden');

    // Fetch quiz data
    fetch(`/quiz/${quizId}`)
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.quiz) {
                currentQuizData = data.quiz;
                renderQuiz(data.quiz);
            } else {
                alert('Quiz not found');
                closeQuizModal();
            }
        })
        .catch(err => {
            console.error('Error fetching quiz:', err);
            alert('Error loading quiz: ' + err.message);
            closeQuizModal();
        });
}

function renderQuiz(quiz) {
    const quizContent = document.getElementById('quizContent');
    quizContent.innerHTML = '';

    quiz.questions.forEach((question, qIndex) => {
        const questionDiv = document.createElement('div');
        questionDiv.className = 'mb-6 p-4 border border-gray-200 rounded-lg';
        questionDiv.innerHTML = `
            <h4 class="text-lg font-semibold mb-3">${qIndex + 1}. ${question.question}</h4>
            <div class="space-y-2">
                ${question.options.map((option, oIndex) => `
                    <label class="flex items-center space-x-3 cursor-pointer">
                        <input type="radio" name="question-${qIndex}" value="${oIndex}"
                               class="w-4 h-4 text-blue-600 focus:ring-blue-500">
                        <span class="text-gray-700">${option}</span>
                    </label>
                `).join('')}
            </div>
        `;
        quizContent.appendChild(questionDiv);
    });
}

function submitQuiz() {
    if (!currentQuizId || !currentQuizData) return;

    const answers = [];
    currentQuizData.questions.forEach((question, index) => {
        const selected = document.querySelector(`input[name="question-${index}"]:checked`);
        answers.push(selected ? parseInt(selected.value) : null);
    });

    // Check if all questions are answered
    if (answers.some(answer => answer === null)) {
        alert('Please answer all questions before submitting.');
        return;
    }

    fetch(`/quiz/course/${currentQuizId}/submit`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ answers })
    })
    .then(response => response.json())
    .then(data => {
        if (data.message === 'Quiz submitted successfully') {
            closeQuizModal();
            showResults(data.submission, data.quiz || currentQuizData);
        } else {
            alert(data.message || 'Error submitting quiz');
        }
    })
    .catch(err => {
        console.error('Error submitting quiz:', err);
        alert('Error submitting quiz');
    });
}

function showResults(submissionData, quizData) {
    console.log('Submission data:', submissionData);
    console.log('Quiz data:', quizData);

    if (!submissionData || !submissionData.answers) {
        console.error('Submission data or answers missing:', submissionData);
        alert('Error displaying results: Submission data not available');
        return;
    }

    if (!quizData || !quizData.questions) {
        console.error('Quiz data or questions missing:', quizData);
        alert('Error displaying results: Quiz data not available');
        return;
    }

    const resultsModal = document.getElementById('resultsModal');
    const resultsContent = document.getElementById('resultsContent');

    resultsContent.innerHTML = `
        <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Quiz Completed!</h3>
            <p class="text-lg text-gray-600">Your Score: <span class="font-bold text-blue-600">${submissionData.score}/${submissionData.total}</span></p>
        </div>
        <div class="space-y-4">
            ${quizData.questions.map((question, index) => {
                const userAnswer = submissionData.answers[index];
                const isCorrect = userAnswer === question.correctIndex;
                return `
                    <div class="p-4 border rounded-lg ${isCorrect ? 'border-green-200 bg-green-50' : 'border-red-200 bg-red-50'}">
                        <h4 class="font-semibold mb-2">${index + 1}. ${question.question}</h4>
                        <div class="space-y-1">
                            ${question.options.map((option, oIndex) => {
                                let className = 'text-gray-600';
                                if (oIndex === question.correctIndex) {
                                    className = 'text-green-700 font-semibold';
                                } else if (oIndex === userAnswer && !isCorrect) {
                                    className = 'text-red-700';
                                }
                                return `<p class="${className}">‚Ä¢ ${option}</p>`;
                            }).join('')}
                        </div>
                        <p class="mt-2 text-sm ${isCorrect ? 'text-green-600' : 'text-red-600'}">
                            ${isCorrect ? '‚úì Correct' : '‚úó Incorrect'}
                        </p>
                    </div>
                `;
            }).join('')}
        </div>
    `;

    resultsModal.classList.remove('hidden');
}

function viewResults(quizId) {
    // Find the quiz data from the rendered quizzes
    const quizzesData = <%- JSON.stringify(quizzes) %>;
    const quiz = quizzesData.find(q => q._id === quizId);
    if (quiz && quiz.submission) {
        showResults({
            score: quiz.submission.score,
            total: quiz.submission.total,
            answers: quiz.submission.answers
        }, quiz);
    }
}

function closeQuizModal() {
    document.getElementById('quizModal').classList.add('hidden');
    currentQuizId = null;
    currentQuizData = null;
}

function closeResultsModal() {
    document.getElementById('resultsModal').classList.add('hidden');
    // Reload the page to update quiz status
    window.location.reload();
}

function showSection(sectionName) {
    const sections = document.querySelectorAll('.section');
    sections.forEach(section => section.classList.add('hidden'));
    const buttons = document.querySelectorAll('.sidebar-btn');
    buttons.forEach(button => button.classList.remove('active'));
    document.getElementById(sectionName + '-section').classList.remove('hidden');
    const activeButton = document.querySelector(`.sidebar-btn[onclick*="showSection('${sectionName}')"]`);
    if (activeButton) activeButton.classList.add('active');
}

window.addEventListener('DOMContentLoaded', () => {
    showSection('content');
});

