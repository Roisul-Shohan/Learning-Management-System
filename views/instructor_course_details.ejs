<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.title %> - Course Details | LMS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .card-hover {
            transition: all 0.3s ease;
        }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        .sidebar-btn {
            transition: all 0.3s ease;
        }

        .sidebar-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar-btn.active {
            background-color: rgba(255, 255, 255, 0.2);
            border-left: 4px solid #fff;
        }

        .form-section {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 24px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .enrollment-item {
            transition: all 0.2s ease;
        }

        .enrollment-item:hover {
            background-color: #f8fafc;
            border-left: 3px solid #0ea5e9;
        }

        .progress-ring {
            transform: rotate(-90deg);
        }

        .progress-ring__circle {
            transition: stroke-dashoffset 0.3s;
            transform: rotate(-90deg);
            transform-origin: 50% 50%;
        }
        .questionCard {
            border: 1px solid #ddd;
            border-radius: 8px; 
            padding: 16px; 
            margin-bottom: 16px; 
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        .questionCard h4 { margin-bottom: 10px; }

        .questionText {
            width: 100%; 
            padding: 8px; 
            border-radius: 6px; 
            border: 1px solid #ccc; 
        }

        .optionsContainer { 
            display: grid;
            grid-template-columns: repeat(2, 1fr); 
            gap: 8px;
            margin-top: 8px;
        }
        .optionInput {
            width: 100%; 
            padding: 8px; 
            border-radius: 6px; 
            border: 1px solid #ccc; 
        }
        .correctInputContainer {
            margin-top: 8px;
        }

        .correctInputContainer input.correctInput {
            width: 60px;
            padding: 6px;
            border-radius: 6px;
            border: 1px solid #ccc;
            margin-left: 8px;
        }

    </style>
</head>
<body class="font-sans bg-gradient-to-b from-slate-500 via-cyan-100 to-slate-500 min-h-screen">

    <!-- Navigation -->
    <nav class="bg-slate-800 sticky top-0 z-50">
        <div class="w-full px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex items-center">
                      <a href="/"> <img src="/images/logo.png" alt="LMS" class="w-10 h-10 object-cover rounded-full"></a>
                        <span class="ml-2 text-2xl font-bold text-orange-50 lg:ml-4">Learning Management System</span>
                </div>
                <div class="flex items-center space-x-4">
                    <% if (user && user.image && user.image.data) { %>
                        <img src="data:<%= user.image.contentType %>;base64,<%= user.image.data.toString('base64') %>" alt="Profile" class="w-10 h-10 object-cover rounded-full">
                    <% } else { %>
                        <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                            <span class="text-gray-600 font-semibold"><%= user ? user.username.charAt(0).toUpperCase() : 'U' %></span>
                        </div>
                    <% } %>
                    <a href="/instructor/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors">
                        Sign Out
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto p-8">
        <!-- Course Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-semibold text-gray-900">Course Title: <span class="text-green-700 text-3xl font-bold"><%= course.title %></span></h1>
                    <span class="text-gray-600">‚Ä¢ <%= enrolledStudents.length %> students enrolled</span>
                   
                </div>
                <a href="/instructor/instructor_dashboard?section=courses" class="bg-slate-700 text-white px-6 py-3 rounded-lg hover:bg-slate-900 transition-all duration-300">
                    Back to Dashboard
                </a>
            </div>
        </div>


        <!-- View Students Button -->
        <div class="mb-8 ">
            <button onclick="toggleStudentsModal()" class="bg-cyan-600 text-white px-6 py-3 rounded-lg hover:bg-cyan-700 transition-all duration-300 shadow-lg mb-6">
                View Students & Progress
            </button>
            <button onclick="openQuizModal()" class=" ml-8 bg-indigo-500 hover:bg-indigo-600 text-white px-6 py-3 rounded-lg hover:from-blue-600 hover:to-cyan-600 transition-all duration-300 shadow-lg mb-6">
                Create New Quiz
            </button>
        </div>

        <!-- Course Content Section -->
        <div class="bg-white rounded-xl shadow-lg p-8">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Course Content</h2>
                <button onclick="openContentModal()" class=" bg-cyan-500 text-white px-6 py-3 rounded-lg hover:bg-cyan-600  transition-all duration-300 shadow-lg">
                    ‚ûï Create New Content
                </button>
            </div>

            <% if (courseContents && courseContents.length > 0) { %>
                <div class="space-y-6">
                    <% courseContents.forEach((content, index) => { %>
                        <div class="border border-gray-200 rounded-lg p-6 card-hover">
                            <div class="flex items-start justify-between mb-4">
                                <div class="flex-1">
                                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                                        <%= index + 1 %>. <%= content.title %>
                                    </h3>
                                    <p class="text-gray-600 mb-3"><%= content.description %></p>
                                    <div class="flex items-center space-x-4 text-sm text-gray-500">
                                        <span class="bg-gray-100 px-2 py-1 rounded">
                                            <%= content.type.toUpperCase() %>
                                        </span>
                                        <% if (content.duration_seconds && content.duration_seconds > 0) { %>
                                            <span><%= Math.floor(content.duration_seconds / 60) %>:<%= (content.duration_seconds % 60).toString().padStart(2, '0') %> min</span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <button onclick="viewContent('<%= content._id %>', '<%= content.type %>')" class= "bg-gradient-to-r from-rose-400 to-rose-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-all duration-300 text-sm">
                                        üëÅÔ∏è View
                                    </button>
                                    <% if (content.is_published) { %>
                                        <button onclick="togglePublish('<%= content._id %>')" class="bg-gradient-to-r from-orange-500  to-orange-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-all duration-300 text-sm">
                                            Hide
                                        </button>
                                    <% } else { %>
                                        <button onclick="togglePublish('<%= content._id %>')" class="bg-gradient-to-r from-slate-500 to-slate-700  to-orange-600  text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-all duration-300 text-sm">
                                            Publish
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-12">
                    <div class="text-gray-400 text-6xl mb-4">üìö</div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">No Content Available</h3>
                    <p class="text-gray-600">This course doesn't have any content uploaded yet.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Create Content Modal -->
    <div id="contentModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-[9999]">
        <div class="bg-white rounded-xl shadow-xl w-full max-w-2xl mx-4 max-h-[90vh] overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-900">Create New Content</h2>
                    <button onclick="closeContentModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
                </div>
            </div>
            <div class="p-6 overflow-y-auto max-h-[70vh]">
                <form action="/instructor/add-content" method="POST" enctype="multipart/form-data" class="space-y-6">

                    <input type="hidden" name="course_id" value="<%= course._id %>">
                    <input type="hidden" name="redirect_to" value="course_details">

                    <!-- Title -->
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Title</label>
                        <input type="text" name="title" class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none"
                            placeholder="e.g., Module 1 ‚Äì Introduction" required>
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Description</label>
                        <textarea name="description" rows="3" class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none"
                            placeholder="Brief description of this content..."></textarea>
                    </div>

                    <!-- Content type -->
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Content Type</label>
                        <select name="type" id="contentType" class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none"
                            onchange="toggleContentInputs()" required>
                            <option value="video">Video</option>
                            <option value="pdf">PDF</option>
                            <option value="slide">Slide</option>
                        </select>
                    </div>

                    <!-- File Upload Input -->
                    <div id="fileInputDiv">
                        <label class="block text-gray-700 font-medium mb-2">Upload File</label>
                        <input type="file" name="file" class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none"
                            accept="video/mp4,video/webm,video/avi,.pdf,.ppt,.pptx" required>
                    </div>

                    <!-- Order -->
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Order (Position)</label>
                        <input type="number" name="order" value="0" class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none">
                    </div>

                    <!-- Publish -->
                    <div class="flex items-center">
                        <input type="checkbox" name="is_published" checked class="mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <label class="text-gray-700 font-medium">Publish immediately</label>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="flex gap-4 pt-4">
                        <button type="button" onclick="closeContentModal()" class="flex-1 bg-gray-500 text-white py-3 px-4 rounded-lg hover:bg-gray-600 transition">
                            Cancel
                        </button>
                        <button type="submit" class="flex-1 bg-gradient-to-r from-green-500 to-emerald-500 text-white py-3 px-4 rounded-lg hover:from-green-600 hover:to-emerald-600 transition">
                            Create Content
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Students Modal -->
    <div id="studentsModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-[9999]">
        <div class="bg-white rounded-xl shadow-xl w-full max-w-4xl mx-4 max-h-[80vh] overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-900">Enrolled Students (<%= enrolledStudents.length %>)</h2>
                    <button onclick="toggleStudentsModal()" class="text-gray-400 hover:text-gray-600 text-2xl"></button>
                </div>
            </div>
            <div class="p-6 overflow-y-auto max-h-[60vh]">
                <% if (enrolledStudents && enrolledStudents.length > 0) { %>
                    <div class="space-y-4">
                        <% enrolledStudents.forEach(student => { %>
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                               
                            <div class="flex items-center space-x-4 mb-2 sm:mb-0 w-full sm:w-auto">
                                <% if (student.image && student.image.data) { %>
                                    <img src="data:<%= student.image.contentType %>;base64,<%= student.image.data.toString('base64') %>" alt="Profile" class="w-12 h-12 object-cover rounded-full flex-shrink-0">
                                <% } else { %>
                                    <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center flex-shrink-0">
                                        <span class="text-gray-600 font-semibold"><%= student.username.charAt(0).toUpperCase() %></span>
                                    </div>
                                <% } %>
                                <div class="truncate">
                                    <h3 class="text-lg font-semibold text-gray-900 truncate"><%= student.username %></h3>
                                    <p class="text-gray-600 truncate"><%= student.email %></p>
                                </div>
                            </div>

                            <div class="flex flex-col sm:flex-row sm:space-x-6 mt-2 sm:mt-0 w-full sm:w-auto">
                                <span class="text-gray-500">Progress: <span class="text-xl text-green-500"><%= student.progressPercent %>%</span></span>
                                <span class="text-gray-500 mt-1 sm:mt-0">Average Quiz: <span class="text-xl text-blue-500"><%= student.averageQuiz || 'N/A' %>%</span></span>
                            </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-12">
                        <div class="text-gray-400 text-6xl mb-4">üë•</div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">No Students Enrolled</h3>
                        <p class="text-gray-600">No students have enrolled in this course yet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Create Quiz Modal -->
    <div id="quizModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-[9999]">
        <div class="bg-white rounded-xl shadow-xl w-full max-w-4xl mx-4 max-h-[90vh] overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-900">Create New Quiz</h2>
                    <button onclick="closeQuizModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
                </div>
            </div>
            <div class="p-6 overflow-y-auto max-h-[70vh]">
                <form id="quizForm" class="space-y-6">
                    <input type="hidden" name="course_id" value="<%= course._id %>">

                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Quiz Title</label>
                        <input type="text" name="title" placeholder="Enter quiz title" required
                            class="w-full border border-gray-300 p-3 rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-purple-400 outline-none">
                    </div>

                    <div id="questionsContainer">
                        <!-- Questions will be added here -->
                    </div>

                    <div class="flex gap-4">
                        <button type="button" onclick="addQuestion()" class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-all duration-300 shadow-lg">
                            ‚ûï Add Question
                        </button>
                        <button type="submit" class="bg-gradient-to-r from-purple-500 to-purple-600 text-white px-6 py-3 rounded-lg hover:from-purple-700 hover:to-purple-700 transition-all duration-300 shadow-lg">
                            Create Quiz
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function toggleStudentsModal() {
            const modal = document.getElementById('studentsModal');
            modal.classList.toggle('hidden');
        }


        async function togglePublish(contentId) {
            try {
                const response = await fetch(`/instructor/toggle-publish/${contentId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {

                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error toggling publish status:', error);
                alert('An error occurred while updating the content status.');
            }
        }

        function openContentModal() {
            const modal = document.getElementById('contentModal');
            modal.classList.remove('hidden');
        }

        function closeContentModal() {
            const modal = document.getElementById('contentModal');
            modal.classList.add('hidden');
        }


        function toggleContentInputs() {
            const type = document.getElementById("contentType").value;
            const fileInput = document.getElementById("fileInputDiv").querySelector("input");

            if (type === "video") {
                fileInput.accept = "video/mp4,video/webm,video/avi";
            } else {
                fileInput.accept = ".pdf,.ppt,.pptx";
            }
        }

        function viewContent(contentId, contentType) {
            if (contentType === 'video') {
                window.open(`/progress/teacher/video/${contentId}`, '_blank');
            }  else {
                window.open(`/instructor/view-file/${contentId}`, '_blank');
            }
        }

       
        document.getElementById('studentsModal').addEventListener('click', function(e) {
            if (e.target === this) {
                toggleStudentsModal();
            }
        });
    
        
        document.getElementById('contentModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeContentModal();
            }
        });


       function openQuizModal() {
            const modal = document.getElementById('quizModal');
            modal.classList.remove('hidden');
        }

        function closeQuizModal() {
            const modal = document.getElementById('quizModal');
            modal.classList.add('hidden');
        }

         document.getElementById('quizModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeQuizModal();
            }
        });


    let questionCount = 0;

    function addQuestion() {
    questionCount++;
    const container = document.getElementById("questionsContainer");

    const div = document.createElement("div");
    div.className = "questionCard";
    div.dataset.index = questionCount - 1;

    div.innerHTML = `
        <h4>Question ${questionCount}</h4>
        <input type="text" placeholder="Enter question ${questionCount}..." class="questionText" required>
        
        <div class="optionsContainer">
            <input type="text" placeholder=" Option 1" class="optionInput" required>
            <input type="text" placeholder=" Option 2" class="optionInput" required>
            <input type="text" placeholder=" Option 3" class="optionInput" required>
            <input type="text" placeholder=" Option 4" class="optionInput" required>
        </div>

        <div class="correctInputContainer">
            Correct Answer (0-3): 
            <input type="number" min="0" max="3" class="correctInput" value="0" required>
        </div>
    `;

    container.appendChild(div);
}


document.getElementById("quizForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const title = e.target.title.value;
    const course_id = e.target.course_id.value;

    const questionDivs = document.querySelectorAll("#questionsContainer > .questionCard");
    const questions = Array.from(questionDivs).map(div => {
        const question = div.querySelector(".questionText").value;
        const options = Array.from(div.querySelectorAll(".optionInput")).map((input, idx) => `${idx}. ${input.value}`);
        const correctIndex = parseInt(div.querySelector(".correctInput").value);
        return { question, options, correctIndex };
    });

    const res = await fetch("/quiz/create", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ title, course_id, questions })
    });

    const data = await res.json();
    alert(data.message);
    if (res.ok) {
    location.reload(); 
}
});
    </script>

</body>
</html>