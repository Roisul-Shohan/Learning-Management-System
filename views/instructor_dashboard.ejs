                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-2xl font-bold text-gray-900">Student Progress Report</h2>
                            <button onclick="closeProgressModal()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
                        </div>

                        <div id="progressContent">
                            <!-- Progress content will be loaded here -->
                        </div>

                        <div class="flex justify-end mt-6">
                            <button onclick="closeProgressModal()" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        function showSection(sectionName, buttonElement = null) {
            const sections = document.querySelectorAll('.section');
            const main_content = document.querySelector('.main-content');

            if (sectionName === 'courses') {
                main_content.classList.remove('p-8', 'mt-8');
            } else {
                main_content.classList.add('p-8', 'mt-8');
            }
            sections.forEach(section => section.classList.add('hidden'));

            const buttons = document.querySelectorAll('.sidebar-btn');
            buttons.forEach(button => button.classList.remove('active'));

            document.getElementById(sectionName + '-section').classList.remove('hidden');

            if (buttonElement) {
                buttonElement.classList.add('active');
            } else {
                // Find the button by section name for default load
                const defaultButton = document.querySelector(`button[onclick*="${sectionName}"]`);
                if (defaultButton) {
                    defaultButton.classList.add('active');
                }
            }
        


        }

        window.addEventListener('DOMContentLoaded', () => {

        const params = new URLSearchParams(window.location.search);
        const section = params.get('section');

        if (section) {
            showSection(section); 
        } else {
            showSection('courses'); 
        }
        });
         
        function toggleEditForm() {
            const card = document.getElementById('profileCard');
            const form = document.getElementById('editProfileForm');
            card.classList.toggle('hidden');
            form.classList.toggle('hidden');
        }
        // Removed toggleInputs function - no longer needed

    function toggleContentInputs() {
    const type = document.getElementById("contentType").value;
    const fileInput = document.getElementById("fileInputDiv");

    if (fileInput) {
        if (type === "video") {
            fileInput.style.display = "block";
            fileInput.querySelector("input").accept = "video/mp4";
        } else {
            fileInput.style.display = "block";
            fileInput.querySelector("input").accept = ".pdf,.ppt,.pptx";
        }
    }
}


       function checkProgress(requestId) {
           document.getElementById('progressModal').classList.remove('hidden');

           fetch(`/instructor/check-progress/${requestId}`)
               .then(response => response.json())
               .then(data => {
                   if (data.success) {
                       console.log(data);
                       displayProgress(data);
                   } else {
                       document.getElementById('progressContent').innerHTML = `
                           <div class="text-center py-8">
                               <div class="text-red-500 text-6xl mb-4">‚ö†Ô∏è</div>
                               <h3 class="text-xl font-semibold text-gray-900 mb-2">Error Loading Progress</h3>
                               <p class="text-gray-600">${data.message || 'Unable to load progress data'}</p>
                           </div>
                       `;
                   }
               })
               .catch(err => {
                   console.error('Error fetching progress:', err);
                   document.getElementById('progressContent').innerHTML = `
                       <div class="text-center py-8">
                           <div class="text-red-500 text-6xl mb-4">‚ö†Ô∏è</div>
                           <h3 class="text-xl font-semibold text-gray-900 mb-2">Error Loading Progress</h3>
                           <p class="text-gray-600">Network error occurred while loading progress data</p>
                       </div>
                   `;
               });
       }

       function displayProgress(data) {
           const content = document.getElementById('progressContent');

           let html = `
               <div class="space-y-6">
                   <!-- Student Info -->
                   <div class="bg-gray-50 rounded-lg p-4">
                       <h3 class="text-lg font-semibold text-gray-900 mb-2">Student Information</h3>
                       <div class="grid grid-cols-2 gap-4">
                           <div>
                               <span class="text-sm text-gray-600">Name:</span>
                               <span class="font-medium ml-2">${data.student.username}</span>
                           </div>
                           <div>
                               <span class="text-sm text-gray-600">Email:</span>
                               <span class="font-medium text-blue-500 ml-2">${data.student.email}</span>
                           </div>
                       </div>
                   </div>

                   <!-- Course Progress -->
                   <div class="bg-blue-50 rounded-lg p-4">
                       <h3 class="text-lg font-semibold text-gray-900 mb-4">Course Progress</h3>
                       <div class="space-y-3">
                           <div class="flex justify-between items-center">
                               <span class="text-sm font-medium">Overall Progress</span>
                               <span class="text-sm font-bold text-blue-600">${data.videoProgress}%</span>
                           </div>
                           <div class="w-full bg-gray-200 rounded-full h-2">
                               <div class="bg-blue-600 h-2 rounded-full" style="width: ${data.videoProgress}%"></div>
                           </div>
                          
                       </div>
                   </div>


                   <div class="bg-blue-50 rounded-lg p-4">
                       <h3 class="text-lg font-semibold text-gray-900 mb-4">Average Quiz Score</h3>
                       <div class="space-y-3">
                           <div class="flex justify-between items-center">
                               <span class="text-sm font-medium">Average Quiz Score</span>
                               <span class="text-sm font-bold text-blue-600">${data.quizAverage}%</span>
                           </div>
                           <div class="w-full bg-gray-200 rounded-full h-2">
                               <div class="bg-blue-600 h-2 rounded-full" style="width: ${data.quizAverage}%"></div>
                           </div>
                          
                       </div>
                   </div>
                  
           `;

           content.innerHTML = html;
       }

       function closeProgressModal() {
           document.getElementById('progressModal').classList.add('hidden');
       }
   </script>
</body>
