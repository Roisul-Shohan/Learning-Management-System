<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructor Dashboard | LMS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .card-hover {
            transition: all 0.3s ease;
        }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        .sidebar-btn {
            transition: all 0.3s ease;
        }

        .sidebar-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar-btn.active {
            background-color: rgba(255, 255, 255, 0.2);
            border-left: 4px solid #fff;
        }
        
        .form-section {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 24px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .enrollment-item {
            transition: all 0.2s ease;
        }
        
        .enrollment-item:hover {
            background-color: #f8fafc;
            border-left: 3px solid #0ea5e9;
        }
        
        .progress-ring {
            transform: rotate(-90deg);
        }
        
        .progress-ring__circle {
            transition: stroke-dashoffset 0.3s;
            transform: rotate(-90deg);
            transform-origin: 50% 50%;
        }
         .fade-message {
            animation: fadeOut 3s forwards;
        }

        @keyframes fadeOut {
            0% { opacity: 1; }
            70% { opacity: 1; }
            100% { opacity: 0; }
        }
    </style>
</head>
<body class="font-sans bg-gradient-to-b from-slate-500 via-cyan-100 to-slate-500 min-h-screen ">
     
     <!--Bank secret for first time visit-->
    <% if (!user.bank_id) { %>
    <div id="bankModal" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-[9999]">
        <div class="bg-white p-8 rounded-xl shadow-xl w-96 text-center">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Bank Verification</h2>
            <p class="text-gray-600 mb-6">
                Please set your bank secret to continue.
            </p>

            <form action="/instructor/bank-secret" method="POST" class="space-y-4">
                <input type="password" name="secret"
                    placeholder="Enter Bank Secret"
                    required
                    class="w-full border border-gray-300 p-3 rounded-lg focus:ring focus:ring-orange-300 outline-none">

                <button class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">
                    Confirm
                </button>
            </form>
        </div>
    </div>
    <% } %>

    <!-- Navigation -->
    <nav class="bg-slate-800 sticky top-0 z-50">
        <div class="w-full px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex items-center">
                      <a href="/"> <img src="/images/logo.png" alt="LMS" class="w-10 h-10 object-cover rounded-full"></a>
                        <span class="ml-2 text-2xl font-bold text-orange-50 lg:ml-4">Learning Management System</span>
                </div>
                <div class="flex items-center space-x-4">
                    <% if (user && user.image && user.image.data) { %>
                        <img src="data:<%= user.image.contentType %>;base64,<%= user.image.data.toString('base64') %>" alt="Profile" class="w-10 h-10 object-cover rounded-full">
                    <% } else { %>
                        <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                            <span class="text-gray-600 font-semibold"><%= user ? user.username.charAt(0).toUpperCase() : 'U' %></span>
                        </div>
                    <% } %>
                    <a href="/instructor/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors">
                        Sign Out
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-slate-800 text-white fixed left-0 top-16 h-[calc(100vh-80px)] shadow-lg mt-4">
            <div class="p-6">
                <h2 class="text-xl font-bold mb-6">Instructor Dashboard</h2>
                <nav class="space-y-2">
                    <button onclick="showSection('courses', this)" class="sidebar-btn active w-full text-left px-4 py-3 rounded-lg flex items-center">
                        <span class="mr-3">üìö</span>
                        All Courses
                    </button>
                    <button onclick="showSection('create', this)" class="sidebar-btn w-full text-left px-4 py-3 rounded-lg flex items-center">
                        <span class="mr-3">‚ûï</span>
                        Create New Course
                    </button>
                    <button onclick="showSection('content', this)" class="sidebar-btn w-full text-left px-4 py-3 rounded-lg flex items-center">
                        <span class="mr-3">üìù</span>
                        Add Course Content
                    </button>
                    <button onclick="showSection('enrollments', this)" class="sidebar-btn w-full text-left px-4 py-3 rounded-lg flex items-center relative">
                        <span class="mr-3">‚úÖ</span>
                        Confirm Enrollments
                        <% if(pendingCourses.length>0) { %>
                         <span class="absolute -top-1 right-16 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center"><%=pendingCourses.length%></span>
                         <% } %>
                    </button>
                    <button onclick="showSection('bank', this)" class="sidebar-btn w-full text-left px-4 py-3 rounded-lg flex items-center">
                        <span class="mr-3">üè¶</span>
                        Bank Details
                    </button>
                    <button onclick="showSection('certificates', this)" class="sidebar-btn w-full text-left px-4 py-3 rounded-lg flex items-center justify-between">
                        <span class="mr-3">üìú</span>
                        <span> Certificate Requests</span>
                        <% if (pendingCertificates && pendingCertificates.length > 0) { %>
                            <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full"><%= pendingCertificates.length %></span>
                        <% } %>
                    </button>
                    <button onclick="showSection('profile')" class="sidebar-btn w-full text-left px-4 py-3 rounded-lg flex items-center">
                        <span class="mr-3">üë§</span>
                        Edit Profile
                    </button>
                </nav>
            </div>
        </div>
        <% if(error) { %>
                      <p class="text-xl mt-2 text-red-700 text-center fade-message">‚ùå<%=error%></p>
         <%}%>
        <!-- Main Content -->
        <div class="flex-1 ml-64 main-content overflow-hidden">

            <!-- My Courses Section -->
           <div id="courses-section" class="section"> 
            <!-- Section 1: Available Courses -->
                <section class=" py-16 bg-gradient-to-b from-slate-400 via-cyan-100 to-slate-400">
                    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
                        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">My Courses</h2>
                         <% if( mycourses.length>0){ %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 justify-items-center">
                            <!-- Course Card -->
                            
                             <% mycourses.forEach((course)=>{ %>
                            <div class="bg-white rounded-xl shadow-sm overflow-hidden card-hover">
                                <div class="h-48 flex items-center justify-center overflow-hidden rounded-xl">
                                    <img 
                                        src="data:<%= course.image_data.contentType %>;base64,<%= course.image_data.data.toString('base64') %>" 
                                        alt="<%= course.title %>" 
                                        class="w-full h-full object-cover"
                                    />
                                </div>

                                <div class="p-6">
                                    <div class="flex justify-between items-start mb-2">
                                        <h3 class="text-xl font-semibold text-gray-900"><%=course.title %></h3>
                                        <span class="bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded"><%=course.level %></span>
                                    </div>
                                    <p class="text-gray-600 text-sm mb-4">
                                        <%= course.description %>
                                    </p>
                                    <div class="flex justify-between items-center">
                                        <span class="text-lg font-bold text-blue-600">$<%=course.price %></span>
                                      <a href="/instructor/view-details/<%=course._id%>">  <button class="text-sm bg-cyan-200 hover:bg-cyan-300 text-cyan-700 px-3 py-1 rounded-lg transition">
                                            View Details
                                        </button>
                                      </a>
                                    </div>
                                </div>
                            </div>
                             <%  }) %>
                            
                        </div>
                         <%}else{ %>
                                 <h6 class="text-xl font-semibold text-red-400 mb-12 text-center bg-white p-10">No Courses Created Yet</h6>
                         <%}%>
                    </div>
                </section>
           
            <!-- Section 2: Offered by LMS Organization -->
                <section class="py-16 bg-gradient-to-b from-cyan-100 via-cyan-200 to-slate-400">
                    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
                        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Offered by LMS Organization</h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 justify-items-center">
                            <% lms_courses.forEach((course)=>{ %>
                            <div class="bg-white rounded-xl shadow-md overflow-hidden w-full min-w-0">
                                <div class="h-48 flex items-center justify-center overflow-hidden rounded-xl">
                                    <img 
                                        src="<%=course.image %>"
                                        alt="<%= course.title %>" 
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                                <div class="p-6 bg-white">
                                    <div class="flex justify-between items-start mb-2">
                                        <h3 class="text-xl font-semibold text-gray-900"><%=course.title %></h3>
                                        <span class="bg-purple-100 text-purple-800 text-sm px-2 py-1 rounded"><%=course.level %></span>
                                    </div>
                                    <p class="text-gray-600 text-sm mb-4">
                                        <%=course.description %>
                                    </p>
                                    <div class="flex justify-between items-center">
                                        <span class="text-lg font-bold text-blue-600"> $<%=course.price %></span>
                                       <a href="/instructor/view-details/<%=course._id%>"> <button class="text-sm bg-cyan-400 hover:bg-cyan-500  px-3 py-1 rounded-lg transition">
                                            View Details
                                        </button>
                                      </a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </section>
 
            </div>

            <!-- Create New Courses Section -->
             <div id="create-section" class="section hidden flex justify-center mt-6 ">
               <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-10 bg-gradient-to-b from-slate-500 via-cyan-100  to-slate-500" >
               <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Create New Course</h1>

              <form action="/instructor/create-course" method="POST" enctype="multipart/form-data" class="space-y-6 ">

              <div>
                <label class="block text-gray-700 font-medium mb-2">Course Title</label>
                <input 
                    name="title"
                    type="text" 
                    class="w-full border border-gray-300 p-3 rounded-xl focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none transition"
                    placeholder="e.g. Web Development Fundamentals"
                    required
                >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Difficulty Level</label>
                    <select 
                        name="level"
                        class="w-full border border-gray-300 p-3 rounded-xl focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none transition"
                        required
                    >
                        <option value="">Select level</option>
                        <option value="Beginner">Beginner</option>
                        <option value="Intermediate">Intermediate</option>
                        <option value="Advanced">Advanced</option>
                    </select>
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2">Price ($)</label>
                    <input 
                        name="price"
                        type="number" 
                        class="w-full border border-gray-300 p-3 rounded-xl focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none transition"
                        placeholder="e.g. 99"
                        required
                    >
                </div>
            </div>

            <div>
                <label class="block text-gray-700 font-medium mb-2">Course Description</label>
                <textarea 
                    name="description"
                    class="w-full border border-gray-300 p-4 rounded-xl focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none h-22 transition"
                    placeholder="Describe what students will learn in this course..."
                    required
                ></textarea>
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-2">Course Image</label>
                <input type="file" name="image" accept="image/*"
                    class="w-full border border-gray-300 p-3 rounded-xl focus:ring-2 focus:ring-green-300 focus:border-green-400 outline-none transition bg-white">
            </div>

            <div class="flex justify-end gap-4 mt-6">
                <button 
                    type="button" 
                    onclick="showSection('courses', this)" 
                    class="px-6 py-2  rounded-xl bg-rose-400 hover:bg-gray-500 transition"
                >
                    Cancel
                </button>

                <button 
                    type="submit" 
                    class="px-6 py-2 bg-gradient-to-l from-blue-500 to-cyan-500 text-white rounded-xl hover:from-blue-600 hover:to-cyan-600 transition"
                >
                    Create Course
                </button>
            </div>
              </form>
             </div>
            </div>
            
             <!-- Add Course Content Section -->
           <div id="content-section" class="section hidden">
                <form action="/instructor/add-content" 
                    method="POST" 
                    enctype="multipart/form-data" 
                    id="courseContentForm"
                    class="max-w-2xl mx-auto bg-gradient-to-b from-slate-500 via-cyan-100  to-slate-500 shadow-md p-6 rounded-xl space-y-4">

                    <h2 class="text-2xl font-bold text-gray-900 mb-4 text-center">Add Course Content</h2>

                    <!-- Course -->
                    <div>
                        <label class="text-sm font-medium">Course</label>
                        <select name="course_id" class="w-full border p-3 rounded-lg" required>
                            <% courses.forEach(course => { %>
                                <option value="<%= course._id %>"><%= course.title %></option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Title -->
                    <div>
                        <label class="text-sm font-medium">Title</label>
                        <input type="text" name="title" class="w-full border p-3 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 outline-none transition"
                            placeholder="e.g., Module 1 ‚Äì Introduction" required>
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="text-sm font-medium">Description</label>
                        <textarea name="description" 
                            class="w-full border p-3 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 outline-none transition"
                            placeholder="Describe what students will learn in this course..."></textarea>

                    </div>

                    <!-- Content type -->
                    <div>
                        <label class="text-sm font-medium">Content Type</label>
                        <select name="type" id="contentType" class="w-full border p-3 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 outline-none transition"
                                onchange="toggleContentInputs()" required>
                            <option value="video">Video</option>
                            <option value="pdf">PDF</option>
                            <option value="slide">Slide</option>
                        </select>
                    </div>

                    <!-- File Upload Input -->
                    <div id="fileInputDiv">
                        <label class="text-sm font-medium">Upload File</label>
                        <input type="file" name="file"
                            class="w-full bg-white p-3 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 outline-none transition"
                            accept="video/mp4,video/webm,video/avi,.pdf,.ppt,.pptx"
                            required>
                    </div>

                    <!-- Order -->
                    <div>
                        <label class="text-sm font-medium">Order (Position)</label>
                        <input type="number" name="order" value="0"
                            class="w-full border p-3 rounded-lg focus:ring-1 focus:ring-orange-400 focus:border-orange-400 outline-none transition">
                    </div>

                    <!-- Publish -->
                    <div class="flex items-center">
                        <input type="checkbox" name="is_published" checked class="mr-2">
                        <label class="text-sm font-medium">Publish</label>
                    </div>

                    <!-- Submit -->
                    <button type="submit" 
                            class="w-full bg-purple-800 text-white py-2 rounded-lg hover:bg-purple-900 transition">
                        Save Content
                    </button>
                </form>
            </div>
                               
             <!-- Confirm Enrollments Section -->
              <div id="enrollments-section" class="section hidden flex-1 ml-10 p-4 mt-8 overflow-x-hidden">
                <div class="overflow-hidden bg-white rounded-xl shadow-sm">
                    <% if (pendingCourses && pendingCourses.length > 0) { %>
                        <table class="w-full divide-y divide-gray-200 table-auto text-xs md:text-sm">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested_At</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% pendingCourses.forEach((pending)=>{ %>
                                    <tr class="hover:bg-gray-50 transition">
                                        <td class="px-4 py-3 whitespace-nowrap"><%=pending.learner_name %></td>
                                        <td class="px-4 py-3 whitespace-nowrap"><%=pending.course_id.title %></td>
                                        <td class="px-4 py-3 whitespace-nowrap"> <%= new Date(pending.requestedAt).toISOString().split('T')[0] %></td>
                                        <td class="px-4 py-3 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                                        </td>
                                        <td class="px-4 py-3 whitespace-nowrap flex gap-2">
                                            <a href="/instructor/approve/<%=pending._id %>"><button class="bg-green-100 text-green-700 px-3 py-1 rounded">Approve</button></a>
                                            <button class="bg-red-100 text-red-700 px-3 py-1 rounded">Reject</button>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="text-center py-12">
                            <div class="text-gray-500 text-lg font-medium">No pending requests</div>
                            <p class="text-gray-400 text-sm mt-2">There are currently no enrollment requests waiting for approval.</p>
                        </div>
                    <% } %>
                </div>
            </div>


            <!-- Bank Details Section -->
            <div id="bank-section" class="section hidden ">
                <h1 class="text-3xl font-bold text-gray-900 mb-8">Bank Details</h1>
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Current Balance Card -->
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h2 class="text-xl font-semibold text-gray-700 mb-4">Current Balance</h2>
                        <div class="flex items-center justify-between">
                            <div>
                                <% if(bank){ %>
                                <p class="text-3xl font-bold text-green-600 mt-2">$<%= bank.balance %></p>
                                <%}%>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
                
                <!-- Show Transactions Button -->
                <button
                    onclick="document.getElementById('transactionsSection').classList.toggle('hidden')"
                    class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition mt-4">
                    Show Transactions
                </button>

                <!-- Transactions Section (initially hidden) -->
                <div id="transactionsSection" class="hidden mt-6">
                    <h3 class="text-lg font-semibold text-gray-700 mb-4">Recent Transactions</h3>
                    <% if (transactions && transactions.length > 0) { %>
                        <div class="space-y-3 max-h-64 overflow-y-auto">
                            <% transactions.forEach(transaction => { %>
                                <div class="bg-zinc-700 rounded-lg p-3">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <p class="text-sm text-gray-100 font-medium">
                                                <%= transaction.description %>
                                            </p>
                                            <p class="text-xs text-blue-500">
                                                <%= new Date(transaction.created_at).toLocaleDateString() %>
                                            </p>
                                        </div>
                                        <span class="text-sm font-bold <%= transaction.amount < 0 ? 'text-red-600' : 'text-green-600' %>">
                                            +$<%= Math.abs(transaction.amount) %>
                                        </span>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-500 text-sm">No transactions found.</p>
                    <% } %>
                </div>

            </div>

            <!-- Pending Certificate Requests Section -->
            <div id="certificates-section" class="section hidden flex-1 ml-10 p-4 mt-8 overflow-x-hidden">
                <div class="overflow-hidden bg-white rounded-xl shadow-sm">
                    <% if (pendingCertificates && pendingCertificates.length > 0) { %>
                        <table class="w-full divide-y divide-gray-200 table-auto text-xs md:text-sm">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested_At</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% pendingCertificates.forEach((request)=>{ %>
                                    <tr class="hover:bg-gray-50 transition">
                                        <td class="px-4 py-3 whitespace-nowrap"><%=request.user_id.username %></td>
                                        <td class="px-4 py-3 whitespace-nowrap"><%=request.course_id.title %></td>
                                        <td class="px-4 py-3 whitespace-nowrap"> <%= new Date(request.createdAt).toISOString().split('T')[0] %></td>
                                        <td class="px-4 py-3 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                                        </td>
                                        <td class="px-4 py-3 whitespace-nowrap flex gap-2">
                                            <a href="/instructor/approve-certificate/<%=request._id %>"><button class="bg-green-100 text-green-700 px-3 py-1 rounded">Approve</button></a>
                                            <a href="/instructor/reject-certificate/<%=request._id %>"><button class="bg-red-100 text-red-700 px-3 py-1 rounded">Reject</button></a>
                                            <button onclick="checkProgress('<%=request._id%>')" class="bg-pink-300 text-indigo-900 px-3 py-1 rounded ml-12">Check Progress</button></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
